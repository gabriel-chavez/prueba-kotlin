<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:visibility="visible"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:elevation="2dp"
        >
        <TextView
            android:id="@+id/tvNumeroOrdinalRcvItem"
            android:layout_width="@dimen/dimen_ancho_item_venta"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="NÃšMERO"
            android:textColor="@color/colorTexto"
            android:textSize="18sp"
            android:background="@drawable/contorno_datos_sincorte"
            />
        <TextView
            android:id="@+id/tvMedioPagoRcvItem"
            android:layout_width="@dimen/dimen_ancho_item_venta"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="NOMBRE MEDIO PAGO"
            android:textColor="@color/colorTexto"
            android:textSize="18sp"
            android:background="@drawable/contorno_datos_sincorte"
             />
        <TextView
            android:id="@+id/tvMontoPagoRcvItem"
            android:layout_width="@dimen/dimen_ancho_item_venta"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="MONTO PAGO"
            android:textColor="@color/colorTexto"
            android:textSize="18sp"
            android:background="@drawable/contorno_datos_sincorte"
            />
        <TextView
            android:id="@+id/tvBancoPagoRcvItem"
            android:layout_width="@dimen/dimen_ancho_item_venta_autorizacion"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="BANCO"
            android:textColor="@color/colorTexto"
            android:textSize="16sp"
            android:background="@drawable/contorno_datos_sincorte"
            />
        <TextView
            android:id="@+id/tvReferenciaPagoRcvItem"
            android:layout_width="@dimen/dimen_ancho_item_venta_autorizacion"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="REFERENCIA PAGO"
            android:textColor="@color/colorTexto"
            android:textSize="16sp"
            android:background="@drawable/contorno_datos_sincorte"
            />

        <TextView
            android:id="@+id/tvFechaPagoRcvItem"
            android:layout_width="@dimen/dimen_ancho_item_venta"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="FECHA PAGO"
            android:textColor="@color/colorTexto"
            android:textSize="18sp"
            android:visibility="visible"
            android:background="@drawable/contorno_datos_sincorte"
            />

    </LinearLayout>

</LinearLayout>