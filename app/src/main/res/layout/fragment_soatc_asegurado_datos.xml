<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".fragmento.SoatcAseguradoDatosFragment">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATOS ASEGURADO"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tvSubtitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete los datos del asegurado"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/llDocumentoExistente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- IZQUIERDA -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DOCUMENTO DE IDENTIDAD"
                            android:textSize="13sp"
                            android:textColor="#757575"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvDocumentoResumen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CIB - 6356939"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#E0E0E0"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>

                    <!-- DERECHA -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DEPARTAMENTO"
                            android:textSize="13sp"
                            android:textColor="#757575"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvDeptoResumen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NO DEFINIDO"
                            android:textSize="16sp"
                            android:textColor="@android:color/holo_green_dark"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDocumentoNuevo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DOCUMENTO DE IDENTIDAD"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#757575"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvNumeroDocumentoGrande"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="321324"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Tipo de Documento -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Tipo de Documento de Identidad:"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_radio_option"
                    android:orientation="horizontal"
                    android:padding="8dp">


                    <Spinner
                        android:id="@+id/spinnerTipoDocumento"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <!-- Número de Documento NO VISIBLE-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Número de Documento de Identidad:"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_radio_option"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="8dp">

                    <EditText
                        android:id="@+id/etNumeroDocumento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray"/>

                </LinearLayout>

                <!-- Extensión/Complemento -->
                <TextView
                    android:id="@+id/tvExtensionDocumento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Extensión/Complemento de Documento:"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:id="@+id/llExtensionDocumento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_radio_option"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <EditText
                        android:id="@+id/etExtensionDocumento"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@android:color/transparent"

                        android:inputType="text"
                        android:textSize="16sp"
                        android:maxLength="10"/>

                </LinearLayout>


                <!-- Departamento de Documento -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="8dp"
                    android:text="Departamento de Documento de Identidad:"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_radio_option"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <Spinner
                        android:id="@+id/spinnerDeptoDocumento"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:spinnerMode="dropdown" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="12dp"/>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />
            <!-- Apellido Paterno -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Apellido Paterno:"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_radio_option"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/etApellidoPaterno"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:hint="Ingrese apellido paterno"
                    android:inputType="textCapWords"
                    android:textSize="16sp"
                    android:maxLength="50"/>

            </LinearLayout>

            <!-- Apellido Materno -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="8dp"
                android:text="Apellido Materno:"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_radio_option"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/etApellidoMaterno"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:hint="Ingrese apellido materno"
                    android:inputType="textCapWords"
                    android:textSize="16sp"
                    android:maxLength="50"/>

            </LinearLayout>

            <!-- Apellido Casada/Viuda -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="8dp"
                android:text="Apellido Casada/Viuda (si corresponde):"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_radio_option"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/etApellidoCasada"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:hint=""
                    android:inputType="textCapWords"
                    android:textSize="16sp"
                    android:maxLength="50"/>

            </LinearLayout>

            <!-- Primer Nombre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Primer Nombre:"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_radio_option"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/etPrimerNombre"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:hint="Ingrese primer nombre"
                    android:inputType="textCapWords"
                    android:textSize="16sp"
                    android:maxLength="50"/>

            </LinearLayout>

            <!-- Segundo Nombre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Segundo Nombre:"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_radio_option"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/etSegundoNombre"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:hint="Opcional"
                    android:inputType="textCapWords"
                    android:textSize="16sp"
                    android:maxLength="50"/>

            </LinearLayout>

            <!-- Fecha de Nacimiento -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Fecha de Nacimiento:"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_radio_option"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/etFechaNacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="DD/MM/AAAA"
                    android:inputType="date"
                    android:textSize="16sp"
                    android:maxLength="11"/>

            </LinearLayout>

            <!-- Departamento de Residencia -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Departamento de Residencia:"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_radio_option"
                android:orientation="horizontal"
                android:padding="6dp">

                <Spinner
                    android:id="@+id/spinnerDeptoResidencia"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:spinnerMode="dropdown" />

            </LinearLayout>


            <!-- Departamento de Contratación -->
<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginBottom="8dp"-->
<!--                android:text="Departamento de Contratación:"-->
<!--                android:textStyle="bold" />-->

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginBottom="16dp"-->
<!--                android:background="@drawable/bg_radio_option"-->
<!--                android:orientation="horizontal"-->
<!--                android:padding="8dp">-->

<!--                <Spinner-->
<!--                    android:id="@+id/spinnerDeptoContratacion"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="35dp"-->
<!--                    android:spinnerMode="dropdown" />-->

<!--            </LinearLayout>-->

            <!-- Sexo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Sexo:"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_radio_option"
                android:orientation="horizontal"
                android:padding="6dp">

                <Spinner
                    android:id="@+id/spinnerSexo"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <!-- Estado Civil -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Estado Civil:"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_radio_option"
                android:orientation="horizontal"
                android:padding="6dp">

                <Spinner
                    android:id="@+id/spinnerEstadoCivil"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <!-- Nacionalidad -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Nacionalidad:"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_radio_option"
                android:orientation="horizontal"
                android:padding="6dp">

                <Spinner
                    android:id="@+id/spinnerNacionalidad"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <!-- Número de Celular -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Número de Celular:"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_radio_option"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/etCelular"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:hint="Ingrese número de celular"
                    android:inputType="phone"
                    android:textSize="16sp"
                    android:maxLength="8"/>

            </LinearLayout>

            <!-- Correo Electrónico -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Correo Electrónico:"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_radio_option"
                android:orientation="horizontal"
                android:padding="8dp"
                android:maxLength="100">

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:hint="Ingrese correo electrónico"
                    android:inputType="textEmailAddress"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Dirección Domicilio -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Dirección Domicilio:"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_radio_option"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/etDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:hint="Ingrese dirección completa"
                    android:inputType="textCapWords"
                    android:textSize="16sp"
                    android:maxLength="200"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Botones de navegación -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <!-- Botón Atrás -->
        <Button
            android:id="@+id/btnAtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@drawable/btn_border"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="Atrás"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <!-- Botón Siguiente -->
        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="Siguiente"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>