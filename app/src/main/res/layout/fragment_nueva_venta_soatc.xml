<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloBeneficiarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BENEFICIARIOS"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Texto explicativo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Para la cobertura por muerte, será(n) los herederos legales del asegurado"
        android:gravity="center"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nota: No es obligatorio registrar beneficiario(s)."
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="12sp"
        android:layout_marginBottom="24dp"/>

    <!-- Botón Agregar Beneficiario -->
    <Button
        android:id="@+id/btnAgregarBeneficiario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGREGAR BENEFICIARIO"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:drawableLeft="@android:drawable/ic_input_add"
        android:backgroundTint="@android:color/holo_green_light"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Botón No registrar -->
    <Button
        android:id="@+id/btnNoRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No registrar beneficiarios"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_orange_light"
        android:padding="12dp"/>
</LinearLayout>
