<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".fragmento.SoatcAseguradoBuscarFragment">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar Asegurado"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tvSubtitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete el documento de identidad para buscar o registrar al asegurado"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:gravity="center"/>



    <!-- Número de documento -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Documento de Identidad:"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_radio_option"
        android:padding="8dp"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/numeroDocumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese número de documento"
            android:inputType="number"
            android:background="@android:color/transparent"
            android:textSize="16sp"
            android:maxLength="10" />

    </LinearLayout>

    <!-- Mensaje para resultados múltiples -->
    <TextView
        android:id="@+id/tvMensajeResultadosMultiples"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Se encontro más de un cliente con el mismo documento de identidad, por favor seleccione uno:"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="8dp"/>

    <!-- Lista de resultados -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvResultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="16dp"
        tools:listitem="@layout/item_asegurado_tomador"/>


    <!-- Espacio flexible -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Botón de búsqueda centrado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar Asegurado"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"/>

    </LinearLayout>

</LinearLayout>