<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".fragmento.SoatcFacturacionFragment">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATOS DE FACTURACIÓN"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Información -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete los datos para la factura electrónica"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="24dp"
        android:gravity="center"/>

    <!-- ScrollView para formulario -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nombre o Razón Social -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre o Razón Social:"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_radio_option"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etNombreRazonSocial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese nombre o razón social"
                    android:inputType="textCapWords"
                    android:background="@android:color/transparent"
                    android:textSize="16sp"/>

            </LinearLayout>

            <!-- Número de Documento -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de Documento:"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_radio_option"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etNumeroDocumento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese número de documento"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:textSize="16sp"/>

            </LinearLayout>

            <!-- Tipo de Documento de Identidad -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de Documento de Identidad:"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_radio_option"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <Spinner
                    android:id="@+id/spinnerTipoDocumento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown"/>

            </LinearLayout>

            <!-- Extensión Documento de Identidad -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Extensión Documento de Identidad:"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_radio_option"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etExtensionDocumento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Opcional"
                    android:inputType="text"
                    android:background="@android:color/transparent"
                    android:textSize="16sp"/>

            </LinearLayout>

            <!-- Correo Electrónico -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo Electrónico:"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_radio_option"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Opcional - Para envío de factura electrónica"
                    android:inputType="textEmailAddress"
                    android:background="@android:color/transparent"
                    android:textSize="16sp"/>

            </LinearLayout>

            <!-- Número de Celular -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de Celular:"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_radio_option"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etCelular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese número de celular"
                    android:inputType="phone"
                    android:background="@android:color/transparent"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Botones de navegación -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Botón Atrás -->
        <Button
            android:id="@+id/btnAtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atrás"
            android:layout_marginEnd="12dp"
            android:background="@drawable/btn_border"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"/>

        <!-- Botón Siguiente -->
        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continuar"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:enabled="false"/>

    </LinearLayout>

</LinearLayout>