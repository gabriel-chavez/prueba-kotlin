<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:visibility="visible"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:elevation="2dp"
        >
        <TextView
            android:id="@+id/tvSoatNumeroComprobanteVentaItem"
            android:layout_width="@dimen/dimen_ancho_item_venta"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="soat número"
            android:textColor="@color/colorTexto"
            android:textSize="18sp"
            android:background="@drawable/contorno_datos_sincorte"
             />

        <TextView
            android:id="@+id/tvVehiculoPlacaVentaItem"
            android:layout_width="@dimen/dimen_ancho_item_venta"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="vehículo placa"
            android:textColor="@color/colorTexto"
            android:textSize="18sp"
            android:background="@drawable/contorno_datos_sincorte"
            />

        <TextView
            android:id="@+id/tvAutorizacionNumeroVentaItem"
            android:layout_width="@dimen/dimen_ancho_item_venta_autorizacion"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="[numero de autorizacion]"
            android:textColor="@color/colorTexto"
            android:textSize="18sp"
            android:visibility="visible"
            android:background="@drawable/contorno_datos_sincorte"
            />

        <TextView
            android:id="@+id/tvNumeroFacturaVentaItem"
            android:layout_width="@dimen/dimen_ancho_item_venta"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="[numero de factura]"
            android:textColor="@color/colorTexto"
            android:textSize="18sp"
            android:visibility="visible"
            android:background="@drawable/contorno_datos_sincorte"
            />

        <TextView
            android:id="@+id/tvFechaFacturaVentaItem"
            android:layout_width="@dimen/dimen_ancho_item_venta"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="[Fecha factura]"
            android:textColor="@color/colorTexto"
            android:textSize="18sp"
            android:visibility="visible"
            android:background="@drawable/contorno_datos_sincorte"
            />

        <TextView
            android:id="@+id/tvPrimaFacturaVentaItem"
            android:layout_width="@dimen/dimen_ancho_item_venta"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:text="[Prima factura]"
            android:textColor="@color/colorTexto"
            android:textSize="18sp"
            android:paddingEnd="5dp"
            android:visibility="visible"
            android:background="@drawable/contorno_datos_sincorte"
            />

        <TextView
            android:id="@+id/tvEstadoVentaItem"
            android:layout_width="@dimen/dimen_ancho_item_venta"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:maxLines="1"
            android:text="[ESTADO [VALIDO, REVERTIDO, ANULADO]]"
            android:textColor="@color/colorTexto"
            android:textSize="18sp"
            android:visibility="visible"
            android:background="@drawable/contorno_datos_sincorte"
            />

    </LinearLayout>

</LinearLayout>